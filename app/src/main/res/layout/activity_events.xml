<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdgminna.android.gdgminna.EventsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        app:cardCornerRadius="10dp"
        android:elevation="7dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/io_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/io16_logo"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google IO Event"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_above="@+id/io_mixcolour"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/io_mixcolour"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/mix_colour"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
       </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="265dp"
            app:cardCornerRadius="10dp"
            android:elevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/devfest_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/devfest16"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developers Festival Event"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_above="@+id/devfest_mixcolour"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/devfest_mixcolour"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/mix_colour"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:cardCornerRadius="10dp"
            android:elevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/studyjam_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/studyjam_logo"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/studyjam_mixcolour"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/mix_colour"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            app:cardCornerRadius="10dp"
            android:elevation="7dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/wtm_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wtm_icon"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/wtm_mixcolour"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/mix_colour"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>
